%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag forgot_passwords_path+"/"+@user.password_reset_token, method: :patch, class: 'sign_in' do
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          = label_tag :password
          .row
            .col-sm-4
              = password_field_tag :password
        %fieldset.form-group.action
          %input(type="submit" value="Reset Password" class="btn btn-default")
