%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: {class: 'form-horezontal'} do |f|
        %header
          %h1 Register
        %fieldset
          .form-group.col-sm-8
            = f.email_field :email, label: "Email Address", class: "col-sm-6"
            = f.password_field :password 
            = f.text_field :full_name, label: "Full Name"
            = f.hidden_field :invite_id 
            
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            / %input(type="submit" value="Sign Up" class="btn btn-default")
            %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_PfMNsDXmQvLR3Oe1FGv1LxmB" data-name="MyFlix" data-description="MyFlix Sign Up Charge" data-amount="995")
