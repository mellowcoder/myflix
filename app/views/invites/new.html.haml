%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invite, html: {class: 'form-horezontal invite'} do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.text_field :name, label: "Friend's Name"
            = f.email_field :email, label: "Friend's Email Address"
            = f.text_area :message, label: "Invitation Message", rows: 5
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
