%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], html: {class: 'form-horezontal'} do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset.col-sm-9.col-md-offset-1
            = f.text_field :title
            = f.select :category_id, options_for_select(Category.all.map{|category| [category.name, category.id]})
            = f.text_area :description, rows: 8
            .form-group
              %label.control-label Large Cover
              %col.btn.btn-file
                %input.form-control(type="file")
            .form-group
              %label.control-label Small Cover
              %col.btn.btn-file
                %input.form-control(type="file")
          %fieldset.actions.form-group.col-sm-9.col-md-offset-1
            %input(type="submit" value="Add Video" class="btn btn-default")
